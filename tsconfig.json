{
    "compilerOptions": {
        // JS + type-checking
        "checkJs": true, // enable TS checking in .js files
        "allowJs": true, // parse .js files
        "skipLibCheck": true,

        // Node ESM
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        // Interop that avoids “not callable” issues
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": false,

        // Paths / DX
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },
        "resolveJsonModule": true,

        // Emission (only if you later add .ts files)
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"]
}
